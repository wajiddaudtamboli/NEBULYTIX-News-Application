{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",
  "functions": {
    "api/*.ts": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/v1/health",
      "destination": "/api/health"
    },
    {
      "source": "/api/v1/auth/admin/login",
      "destination": "/api/auth?action=login"
    },
    {
      "source": "/api/v1/auth/admin/setup",
      "destination": "/api/auth?action=setup"
    },
    {
      "source": "/api/v1/auth/admin/verify",
      "destination": "/api/auth?action=verify"
    },
    {
      "source": "/api/v1/news/featured",
      "destination": "/api/featured"
    },
    {
      "source": "/api/v1/news/trending",
      "destination": "/api/trending"
    },
    {
      "source": "/api/v1/news/:id",
      "destination": "/api/news?id=:id"
    },
    {
      "source": "/api/v1/news",
      "destination": "/api/news"
    },
    {
      "source": "/api/v1/admin/stats",
      "destination": "/api/admin?action=stats"
    },
    {
      "source": "/api/v1/admin/news/all",
      "destination": "/api/admin"
    },
    {
      "source": "/api/v1/admin/news/create",
      "destination": "/api/admin"
    },
    {
      "source": "/api/v1/admin/news/:id/featured",
      "destination": "/api/admin?id=:id&action=featured"
    },
    {
      "source": "/api/v1/admin/news/:id/trending",
      "destination": "/api/admin?id=:id&action=trending"
    },
    {
      "source": "/api/v1/admin/news/:id",
      "destination": "/api/admin?id=:id"
    },
    {
      "source": "/api/v1/user/sync",
      "destination": "/api/user?action=sync"
    },
    {
      "source": "/api/v1/user/profile",
      "destination": "/api/user?action=profile"
    },
    {
      "source": "/api/v1/user/saved/all",
      "destination": "/api/user?action=saved"
    },
    {
      "source": "/api/v1/user/saved",
      "destination": "/api/user?action=saved"
    },
    {
      "source": "/api/v1/user/save/:newsId",
      "destination": "/api/user?action=save&newsId=:newsId"
    },
    {
      "source": "/api/news/:id",
      "destination": "/api/news?id=:id"
    },
    {
      "source": "/api/admin/news/all",
      "destination": "/api/admin"
    },
    {
      "source": "/api/admin/news/create",
      "destination": "/api/admin"
    },
    {
      "source": "/api/admin/news/:id/featured",
      "destination": "/api/admin?id=:id&action=featured"
    },
    {
      "source": "/api/admin/news/:id/trending",
      "destination": "/api/admin?id=:id&action=trending"
    },
    {
      "source": "/api/admin/news/:id",
      "destination": "/api/admin?id=:id"
    },
    {
      "source": "/api/admin/stats",
      "destination": "/api/admin?action=stats"
    },
    {
      "source": "/api/user/save/:newsId",
      "destination": "/api/user?action=save&newsId=:newsId"
    },
    {
      "source": "/api/user/saved/all",
      "destination": "/api/user?action=saved"
    },
    {
      "source": "/api/user/saved",
      "destination": "/api/user?action=saved"
    },
    {
      "source": "/api/user/sync",
      "destination": "/api/user?action=sync"
    },
    {
      "source": "/api/user/profile",
      "destination": "/api/user?action=profile"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, x-admin-secret, x-clerk-user-id"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
